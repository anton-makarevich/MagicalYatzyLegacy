<views:BasePage
    xmlns:DicePanel="using:Sanet.Kniffel.DicePanel" 
    x:Class="DicePokerRT.NewGamePage"
    xmlns:views="using:Sanet.Views"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:Sanet.Common"
    xmlns:local="using:DicePokerRT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="StartLayoutUpdates" Unloaded="StopLayoutUpdates"
    mc:Ignorable="d">

    <views:BasePage.Resources>
        <common:BooleanToVisibilityConverter x:Key="VisibilityKey"/>
        <common:ReverseBooleanToVisibilityConverter x:Key="ReversedVisibilityKey"/>
    </views:BasePage.Resources>
    <Page.BottomAppBar>
        <AppBar Padding="10,0,10,0" 
                IsOpen="{Binding IsPlayerSelected, Mode=TwoWay}">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                    <Button  HorizontalAlignment="Left" 
                    IsEnabled="{Binding CanDeletePlayer}"  
                    Style="{StaticResource DeleteAppBarButtonStyle}"
                            Command="{Binding DeleteCommand}"/>
                        
                </StackPanel>

            </Grid>
        </AppBar>
    </Page.BottomAppBar>

    <Viewbox
        StretchDirection="Both"
        Stretch="Fill">
        <Grid
            x:Name="LayoutRoot"
            Background="Transparent"
              MinHeight="768"
              MinWidth="1366">
            <DicePanel:DicePanel
            x:Name="dpBackground"
            />
            <Grid
                x:Name="ControlGrid">
                     <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="130"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
                    <TextBlock Style="{StaticResource HeaderTextStyle}"
                   Foreground="{StaticResource SanetBlue}"
                   x:Name="titleText"
                   Text="{Binding Title}"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Margin="120,0"
                   VerticalAlignment="Center"/>

                <StackPanel
                    Grid.Column="1"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    x:Name="groupsLayout">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Style="{StaticResource SubheaderTextStyle}"
                           HorizontalAlignment="Left"
                   Foreground="{StaticResource SanetBlue}"
                   Text="{Binding PlayersLabel}"
                   Grid.Row="0"
                   VerticalAlignment="Center"/>
                
                        <ListView
                 Grid.Row="1"
                Margin="20,0,10,20"
                SelectionMode="Single"
                ItemsSource="{Binding Players}"
                HorizontalAlignment="Center"
                    SelectedItem="{Binding SelectedPlayer, Mode=TwoWay}"
            ItemTemplate="{StaticResource NewPlayerTemplate}"
                >
                        
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Width" Value="500"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Style="{StaticResource SubheaderTextStyle}"
                           HorizontalAlignment="Left"
                   Foreground="{StaticResource SanetBlue}"
                   Text="{Binding RulesLabel}"
                   Grid.Row="0"
                   VerticalAlignment="Center"/>
                        <ListView
                 Grid.Row="1"
                Margin="20,0,10,20"
                SelectionMode="Single"
                ItemsSource="{Binding Rules}"
                HorizontalAlignment="Center"
                    SelectedItem="{Binding SelectedRule, Mode=TwoWay}"
            ItemTemplate="{StaticResource RuleTemplate}"
                >

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Width" Value="500"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Grid>
                </StackPanel>
                
                
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                           Grid.Column="1"
                   Grid.Row="1"
                            Margin="10"
                            Visibility="{Binding CanAddPlayer, Converter={StaticResource VisibilityKey}}"
                            VerticalAlignment="Bottom">

                    <Button  HorizontalAlignment="Left" 
                    IsEnabled="{Binding CanAddPlayer}"  
                    Style="{StaticResource AppBarButtonStyle}"
                             AutomationProperties.Name="{Binding AddPlayerLabel}"
                             Command="{Binding AddPlayerCommand}" >

