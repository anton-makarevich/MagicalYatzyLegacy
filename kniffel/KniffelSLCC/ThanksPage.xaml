            <dataInput:Label Foreground="White" Content="Matthew Tagliaferri" Height="20" HorizontalAlignment="Left" Margin="14,5,0,0" Name="Label4" VerticalAlignment="Top" Width="164" Grid.Row="1" />
            <dataInput:Label Foreground="LightYellow" Content="Mail.ru platform SDK" Height="20" HorizontalAlignment="Left" Margin="10,5,0,0" Name="Label5" VerticalAlignment="Top" Width="164" Grid.Column="1" Grid.Row="42" />
