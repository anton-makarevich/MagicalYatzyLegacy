<UserControl x:Class="KniffelNet.KniffelScoreLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             
    mc:Ignorable="d"
    d:DesignHeight="40" d:DesignWidth="40" xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input">

    <StackPanel x:Name="LayoutRoot" >
         <TextBlock Height="20" HorizontalAlignment="Left" Name="txtValue" Text="1" VerticalAlignment="Top" Width="30" FontSize="16" FontStyle="Italic" FontWeight="Bold" TextAlignment="Center" />
        <StackPanel Name="spValueBackground" > 
        <TextBlock Height="20" HorizontalAlignment="Left" Name="txtLabel" Text="30" VerticalAlignment="Top" Width="30" TextAlignment="Center" FontSize="16" />
        </StackPanel>
    </StackPanel>
</UserControl>
